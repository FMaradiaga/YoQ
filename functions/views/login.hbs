<body>
    <img class="wave" src="img/wave.png">
    <div class="container">
        <div class="img">
           
        </div>
        <div class="login-content">
            <form action="/" method="post">
                <img src="img/avatar.svg">               
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <input id="vuser" type="text" class="input" placeholder="Usuario">
                    </div>
                </div>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <input id="iuser" type="text" class="input" placeholder="PIN">
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <input id="vpass" type="password" class="input">
                    </div>
                </div>
                <input type="submit" class="btn" value="Login" placeholder="ContraseÃ±a">
            </form>
        </div>
    </div>
    <script type="text/javascript" src="/js/loginstyle.js"></script>
